{
    "_comment": "wordpress-stubs pinned to ~6.8.0: v6.9 crashes Psalm (vimeo/psalm#11588)",
    "name": "dianxiaomi/dianxiaomi",
    "description": "WordPress Plugin",
    "type": "project",
    "require": {
        "wp-coding-standards/wpcs": "3.3.0",
        "squizlabs/php_codesniffer": "^3.8",
        "automattic/vipwpcs": "^3.0.1",
        "vena/php-cs-fixer-wordpress": "dev-main@dev",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "license": "GPL",
    "autoload": {
        "classmap": [
            "inc/"
        ],
        "psr-4": {
            "Dianxiaomi\\Tests\\Integration\\": "tests/Integration/"
        }
    },
    "authors": [
        {
            "name": "Maxime Michaud",
            "email": "14856114+MaximeMichaud@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "tareq1988/wp-php-cs-fixer": "dev-master@dev",
        "phpstan/phpstan": "^2.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "php-stubs/woocommerce-stubs": "^10.4",
        "php-stubs/wordpress-stubs": "~6.9.1",
        "vimeo/psalm": "^6.14",
        "humanmade/psalm-plugin-wordpress": "^3.0",
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "yoast/phpunit-polyfills": "^2.0 || ^3.0 || ^4.0"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs .",
        "phpcbf": "phpcbf .",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "psalm": "psalm",
        "lint": [
            "@phpcs",
            "@phpstan",
            "@psalm"
        ],
        "check-all": [
            "@lint",
            "@test"
        ]
    }
}
